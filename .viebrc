" Options
set adblocker=update
set devtoolsposition=split
set mouse-=leaveinput
set noquitonlasttabclose
set pdfbehavior=view
set redirects+=https://www\.google\.com/url\?q=(.*)~$1
set searchwords={}
set searchwords+=d~en.wiktionary.org/wiki/Special:Search?search=%s
set searchwords+=g~encrypted.google.com/search?q=%s
set searchwords+=l~google.com/search?q=%s&btnI
set searchwords+=w~en.wikipedia.org/wiki/Special:Search/%s
set searchwords+=yt~youtube.com/results?search_query=%s,imdb~imdb.com/find?q=%s
set suggesttopsites=0
set tabclosefocus=previous
set vimcommand="foot -e vim"

set guihidetimeout=0
set guinavbar=oninput
set guitabbar=always
set guiscrollbar=always
set guifullscreennavbar=oninput
set guifullscreentabbar=always

" Mappings
nmap <Space> <scrollPageDown>
nmap <C-l> <:set guitabbar!always|never><:set guiscrollbar!always|never><:set guifullscreentabbar!always|never>
nmap <C-Tab> <:buffer #>
cmap <C-a> <Home>
emap <C-a> <Home>
smap <C-a> <Home>
cmap <C-e> <End>
emap <C-e> <End>
smap <C-e> <End>

" Commands
:command mpv <:!mpv "<useCurrentUrl>">
:command agent <:set useragent!%firefox|%default>
