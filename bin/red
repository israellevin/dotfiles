#!/bin/bash -e

if [ "$1" ]; then
    [ $1 = 0 ] && temp=10 || temp=$1
    temp=$(awk "BEGIN{print 6500 - ((11 - $temp) * 550)}")
    if [ "$2" ]; then
        [ $2 = 0 ] && brightness=10 || brightness=$2
        brightness="-b $(awk "BEGIN{print $brightness / 10}")"
    fi
    redshift -PO $temp $brightness
else
    redshift -x
fi
