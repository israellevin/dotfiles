#!/bin/bash
q="$*"
q=${q// /+}
magnets="$(curl -s "https://thepiratebay.org/search/$q" | grep -Pom10 '(?<= href=")magnet:[^"]*(?=")')"
echo "$magnets" | grep -Po '(?<=&dn=)[^&]*' | nl
read -p '> ' q
[ q = "$q" ] && exit 1
magnet="$(echo "$magnets" | head -n $q | tail -n 1)"
TMPDIR=~/torrents nodejs ~/peerflix/app.js "$magnet"
exit 0
