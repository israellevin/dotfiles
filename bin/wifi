#!/bin/sh
cd /etc/network/
interface="$(find -maxdepth 1 -type f | dmenu)"
[ "$interface" ] || exit 0
if [ -f "$interface" ]; then
    ifdown wlan0
    cp "$interface" interfaces
    ifup wlan0
else
    read -p "save current interface as $interface? (y/N) " q
    [ "$q" = y ] && cp interfaces "$interface"
fi
exit 0
